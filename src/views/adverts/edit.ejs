<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit Advertisement</h1>

      <form action="/advertise/<%= advert.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Advertisement Title</label>

          <input type="text" name="title" class="form-control"  aria-describedby="titleHelp" placeholder="Enter Title" value="<%= advert.title %>">
        </div>
        <div class="form-group">
          <label for="description">Edit Description</label>
          <textarea rows="4" class="form-control" name="description" placeholder="Enter Description"><%= advert.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
